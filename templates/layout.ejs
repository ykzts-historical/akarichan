<?xml version="1.0" encoding="utf-8"?>
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="user-scalable=no, width=device-width" />
<% if (prev_page()) { %>
    <link rel="prev" href="<%= prev_page() %>" />
<% } %>
<% if (next_page()) { %>
    <link rel="next" href="<%= next_page() %>" />
<% } %>
    <link rel="stylesheet" type="text/css" href="<%= settings.STATIC_URI %>/style/main.css" />
    <title><%= get_title() %></title>
  </head>
  <body>
    <h1><%= get_title() %></h1>
<%- body %>
    <fieldset>
      <legend><label for="tumblr_username">Form</label></legend>
      <form action="/post-method" method="POST">
        <fieldset>
          <legend><label for="tumblr_username">Tumblr username</label></legend>
          <input type="text" value="<%= username %>" id="tumblr_username" name="tumblr_username" />
        </fieldset>
        <input type="submit" value="submit" />
      </form>
    </fieldset>
    <script type="application/javascript" src="<%= settings.STATIC_URI %>/script/dummy.js"></script>
    <script type="application/javascript" src="<%= settings.STATIC_URI %>/script/main.js"></script>
  </body>
</html>
